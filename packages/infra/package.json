{
  "name": "@packages/infra",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --external @packages/domain",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs --external @packages/domain",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@packages/domain": "workspace:*",
    "handlebars": "^4.7.8",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}
