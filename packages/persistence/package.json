{
  "name": "@packages/persistence",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build tsconfig.json && tsup src/index.ts --format esm,cjs",
    "build:types": "tsc --build tsconfig.json",
    "build:js": "tsup src/index.ts --format esm,cjs",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "mongoose": "^8.19.2",
    "@packages/domain": "workspace:*",
    "@packages/contracts": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}